<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >


    <xacro:include filename="inertial_macros.xacro"/>
    
    
    
    <!-- FARBEN in RotGrÃ¼nBlauAmber-->

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
    </material>

    <material name="LightGrey">
        <color rgba="0.7 0.7 0.7 1.0"/>
    </material>

    <material name="red">
        <color rgba="1 0. 0. 1.0"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">
        
    </link>

    <!-- Chassis Link AKA Rad Strebe-->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.0 0.0 0.0"/>               
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.0 0.0 0.003" rpy="0.0 0.0 0.0"/>            
            <geometry>
                <box size="0.034 0.25 0.034"/>                
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.003" rpy="0.0 0.0 0.0"/>            
            <geometry>
                <box size="0.034 0.25 0.034"/>                
            </geometry>
        </collision>
        <xacro:inertial_box mass="1.5" x="0.034" y="0.025" z="0.034">
            <origin xyz="0.0 0.0 0.003" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis">
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="chassi_T_joint" type="fixed">
       <parent link="base_link"/>
       <child link="chassis_t"/>
       <origin xyz="-0.12 0.0 0.0"/>               
    </joint>

    <link name="chassis_t">
        <visual>
            <origin xyz="0.0 0.0 0.003" rpy="0.0 0.0 -${pi/2}"/>            
            <geometry>
                <box size="0.034 0.25 0.034"/>                
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.003" rpy="0.0 0.0 0.0"/>            
            <geometry>
                <box size="0.034 0.25 0.034"/>                
            </geometry>
        </collision>
        <xacro:inertial_box mass="1.5" x="0.034" y="0.025" z="0.034">
            <origin xyz="0.0 0.0 0.003" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis_t">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- Linker Reifen-->

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0.0 0.125 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.3" radius="0.06">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- Rechter Reifen-->

    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="0.0 -0.125 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.3" radius="0.06">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- Caster Wheel Joint-->

    <joint name="caster_wheel_joint" type="fixed">
        <origin xyz="-0.23 0.0 -0.03" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="caster_wheel"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.15" radius="0.03">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="caster_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>

    </gazebo>

        <!-- Chassis Aufbau-->

    <joint name="body_base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body"/>
        <origin xyz="-0.08 0.0 0.055"/>               
    </joint>
    
    <link name="body">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>            
            <geometry>
                <box size="0.4 0.11 0.07"/>                
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.003" rpy="0.0 0.0 0.0"/>            
            <geometry>
                <box size="0.4 0.11 0.07"/>               
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.2" x="0.4" y="0.11" z="0.07">
            <origin xyz="0.0 0.0 0.003" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="body">
        <material>Gazebo/Orange</material>
    </gazebo>

    <joint name="body_joint" type="fixed">
        <parent link="body"/>
        <child link="body_top"/>
        <origin xyz="0 0.0 0.07"/>               
    </joint>
    
    <link name="body_top">
        <visual>
            <origin xyz="-0.04 0.0 0.0" rpy="0.0 0.0 0.0"/>            
            <geometry>
                <box size="0.32 0.11 0.07"/>                
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>            
            <geometry>
                <box size="0.4 0.11 0.07"/>               
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.2" x="0.4" y="0.11" z="0.07">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="body_top">
        <material>Gazebo/Orange</material>
    </gazebo>

</robot>